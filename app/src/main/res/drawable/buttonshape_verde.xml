<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_pressed="false">
        <shape>
            <gradient android:angle="270" android:endColor="@color/corVerdeClaro" android:startColor="@color/corVerdeClaro" />
            <corners android:radius="5dp" />
            <padding android:bottom="6dp" android:left="10dp" android:right="10dp" android:top="5dp" />
            <size android:height="10dp" />
        </shape>
    </item>

    <item android:state_focused="false" android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/corVerdeClaro" android:startColor="@color/corVerdeClaro" />
            <corners android:radius="5dp" />
            <padding android:bottom="6dp" android:left="10dp" android:right="10dp" android:top="5dp" />
            <size android:height="10dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/corVerde" android:startColor="@color/corVerde" />
            <corners android:radius="5dp" />
            <padding android:bottom="6dp" android:left="10dp" android:right="10dp" android:top="5dp" />
            <size android:height="10dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <gradient android:angle="270" android:endColor="@color/corVerdeForte" android:startColor="@color/corVerdeForte" />
            <corners android:radius="5dp" />
            <padding android:bottom="6dp" android:left="10dp" android:right="10dp" android:top="5dp" />
            <size android:height="10dp" />
        </shape>
    </item>

</selector>